<?xml version="1.0" encoding="utf-8"?>
<jnlp
  spec="1.0+"
  codebase="$$context/docs/"
  href="${outputFile}">
  <information>
    <title>${project.Name}</title>
    <vendor>${project.Organization.Name}</vendor>
    <homepage href="${project.url}"/>
    <description kind="short">${project.description}</description>
    <offline-allowed/>
  </information>
  <resources>
    <java version="1.5+" initial-heap-size="64m" max-heap-size="128m"/>
	${dependencies}
  </resources>
  <applet-desc name="${project.artifactId}" main-class="${mainClass}" width="300" height="250">
  </applet-desc>
</jnlp>

